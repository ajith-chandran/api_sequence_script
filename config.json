{
  "env": {
    "tenant_id": "tenant-xyz",
    "region": "us-east-1",
    "auth_token": "secret-token"
  },
  "generators": {
    "order_number": {
      "type": "pattern",
      "pattern": "##-##############"
    },
    "alpha_code": {
      "type": "alphanumeric",
      "length": 26
    }
  },
  "api_calls": {
    "APA1": {
      "system": "OC",
      "endpoint": "/post",
      "method": "POST",
      "template": "templates/apa1_template.json",
      "headers": {
        "Authorization": "Bearer {{ auth_token }}",
        "Accept": "application/json",
        "Customer": "{{ alpha_code }}"
      },
      "dynamic_variables": {
        "order_number": "json.lookup_id"
      },
      "success_condition": {
        "path": "json.lookup_id",
        "exists": true
      },
      "extract": {
        "final_order_number": "json.lookup_id"
      },
      "print_output": [
        {
          "message": "Final available order number: {{value}}",
          "path": "json.details.0.user_info"
        },
        {
          "message": "Order ID in response: {{value}}",
          "path": "json.details.1.user_info"
        }
      ],
      "retries": 10,
      "timeout": 5,
      "duration_limit": 120
    },
    "APA2": {
      "system": "OCE",
      "endpoint": "/api/{{ region }}/process/{{ final_order_number }}",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer {{ auth_token }}",
        "Content-Type": "application/json"
      },
      "template": "templates/apa2_template.json",
      "success_condition": {
        "path": "status",
        "equals": "processed"
      },
      "print_output": [
        {
          "message": "Processing complete for order: {{value}}",
          "env_var": "final_order_number"
        },
        {
          "message": "Process ID returned: {{value}}",
          "path": "data.process_id"
        }
      ],
      "retries": 3,
      "timeout": 10,
      "duration_limit": 180
    }
  },
  "sequences": {
    "sequence1": ["APA1"]
  },
  "environments": {
    "test2": {
      "OC": "https://postman-echo.com",
      "OCE": "https://test2.oce.example.com"
    },
    "QA2": {
      "OC": "https://qa2.oc.example.com",
      "OCE": "https://qa2.oce.example.com"
    }
  }
}
